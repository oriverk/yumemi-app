{
  "name": "react-ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "vite preview",
    "test": "vitest",
    "testrun": "vitest run",
    "testui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint 'src/**/{*.ts,*.tsx}'",
    "list:stylelint": "npx stylelint '**/*.css'",
    "fix": "run-s fix:*",
    "fix:eslint": "eslint --fix 'src/**/{*.ts,*.tsx}'",
    "fix:prettier": "prettier --write 'src/**/{*.ts,*.tsx}'",
    "fix:stylelint": "npx stylelint '**/*.css' --fix"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@vitejs/plugin-react": "^3.0.0",
    "@vitest/ui": "^0.27.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^29.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.1",
    "jsdom": "^21.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vitest": "^0.27.2"
  }
}
